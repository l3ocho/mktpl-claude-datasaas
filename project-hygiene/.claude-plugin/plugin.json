  "config": {
    "default_shell": "bash",
    "environment": {
      "PLUGIN_HOME": "${CLAUDE_PLUGIN_ROOT}"
    }
  },
  "permissions": {
    "file_access": ["read", "write"],
    "shell_access": true
  }
}
